set nocompatible
" 设定文件浏览器目录为当前目录
set bsdir=buffer
"set autochdir
" 设置编码
set enc=utf-8
" 设置文件编码
set fenc=utf-8
" 设置文件编码检测类型及支持格式
set fencs=utf-8,ucs-bom,gb18030,gbk,gb2312,cp936
" 指定菜单语言
set langmenu=zh_CN.UTF-8
source $VIMRUNTIME/delmenu.vim
source $VIMRUNTIME/menu.vim
" 设置c++语法高亮度
set syn=cpp
" 显示行号
set nu!
" 查找结果高亮度显示
set hlsearch
" tab宽度
set tabstop=8
" 自动缩进
set cindent shiftwidth=8
set autoindent shiftwidth=8
" 语法高亮
syntax on
" C/C++注释
set comments=://
" 修正自动C式样注释功能 <2005/07/16>
set comments=s1:/*,mb:*,ex0:/
" 增强检索功能
set tags=./tags,./../tags,./**/tags
" 保存文件格式
set fileformats=unix,dos
" 键盘操作
"map gk
"map gj
" 命令行高度
set cmdheight=1
" 中文帮助
if version > 603
set helplang=cn
endif
