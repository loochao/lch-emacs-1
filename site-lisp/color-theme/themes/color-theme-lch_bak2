(require 'color-theme)

(defun color-theme-lch ()
  "Color theme by LooChao"
  (interactive)
  (color-theme-install
   '(color-theme-lch
     ((background-color . "black")
      (background-mode . dark)
      (border-color . "black")
      (cursor-color . "sienna")
      (foreground-color . "MistyRose3")
      (mouse-color . "sienna1"))
		   )))

(provide 'color-theme-lch)
;;; color-theme-arjen.el ends here
